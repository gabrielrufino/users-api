{
  "name": "@gabrielrufino/users-api",
  "private": true,
  "version": "5.0.0",
  "description": "Users microservice ready and flexible for your system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --ext ts --exec 'npm run build && npm start'",
    "lint": "npx standard .",
    "lint:fix": "npm run lint -- --fix",
    "reinstall": "npx rimraf node_modules && npm ci",
    "start": "APP_PORT=$PORT node -r dotenv/config dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is --not master && npm run lint",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielrufino/users-api.git"
  },
  "author": "Gabriel Rufino",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/gabrielrufino/users-api/issues"
  },
  "homepage": "https://github.com/gabrielrufino/users-api#readme",
  "dependencies": {
    "@mikro-orm/core": "^5.6.16",
    "@mikro-orm/mongodb": "^5.6.16",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.13.17",
    "mongoose-delete": "^0.5.4",
    "safe-regex": "^2.1.1",
    "validate.js": "^0.13.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongoose-delete": "^0.5.9",
    "@types/safe-regex": "^1.1.4",
    "git-branch-is": "^4.0.0",
    "husky": "^3.1.0",
    "jest": "^28.1.3",
    "node-fetch": "^3.3.1",
    "nodemon": "^2.0.22",
    "rimraf": "^3.0.2",
    "standard": "^17.0.0",
    "typescript": "^5.0.4"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
